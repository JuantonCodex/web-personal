body
	background #323232
#main
	font-family ff_main
	padding 0 15px
	padding-bottom 50px
	@media mw610
		padding 0 10px
	.main-inner
		margin 0 auto
		max-width 1000px
		padding 35px 0 0 0
		@media mw610
			padding-top 25px
		#portafolio
			overflow hidden
			.loader
				padding-bottom 5px
				img
					margin 0 auto
			.work
				box-sizing border-box
				float left
				width 33.3333%
				padding 0 10px
				margin-bottom 30px
				@media mw790
					width 50%
				@media mw550
					padding 0
					width 100%
				&:hover
					.nombre
						h2
							color #DDD
				.nombre
					padding-top 5px
					position relative
					text-align center
					h2
						color #DDDDDD
						margin 0
						font-size 16px
						font-weight fw_medium
						text-shadow 2px 2px 1px #000
						padding 5px 0 0 0
						text-align center
					span.categoria
						display inline-block
						margin 0 auto
						background #3a3939
						padding 5px 10px
						margin-top 7px
						border-radius 4px
						text-shadow none
						color #ddd
						font-size 12px
						text-align center

					.progress
						background transparent url(../img/sprite-project-progress.png) 0 0 no-repeat
						height 31px
						left 50%
						margin-left -52px
						position absolute
						top -45px
						width 104px
				.imagen
					background #595959
					padding 2%
					.viewport
						border 1px solid #6B6B6B
						position relative
						overflow hidden
						a
							display block
							height 100%
							width 100%
							.icon-portafolio-link-work
								transition .5s
								opacity 0.5
							&:hover
								.icon-portafolio-link-work
									transition .9s
									opacity 0.9
								img
									transition .5s
									transform scale(1.1)
						.icon-portafolio-link-work
							background #fff
							color #666
							opacity 0
							height 50px
							width 50px
							font-size 35px
							position absolute
							z-index 4
							left 50%
							top 50%
							text-align center
							line-height 50px
							margin-top -25px
							margin-left -25px
						img
							margin 0 auto
							width 100%

			.trabajo
				overflow hidden
				.wrapper-slide
					width 49%
					margin-right 3%
					float left
					@media mw790
						width 100%
						float none
          .slide
						width 100%
						position relative
						.slide-list
							padding 0
							margin 0
							img
								width 100%
						.slick-dots
							position relative
							margin-top 10px
							margin-bottom 30px
							bottom 0
						.slick-prev, .slick-next
							height 37px
							width 35px
						.slick-prev
							z-index 2
							left 5px
						.slick-next
							z-index 2
							right 5px
						.slick-prev:before, .slick-next:before
							opacity 1
							color #b9c7cd
							font-size 35px
							text-shadow 0.5px 0.5px 2px #4c5d65
						.slick-prev.slick-disabled:before, .slick-next.slick-disabled:before
							opacity 0.25
						.slick-dots li button:before
							font-size 15px
						.slick-dots li.slick-active button:before
							opacity 1
							color #b9c7cd

				.descripcion
					width 48%
					float left
					@media mw790
						width 100%
						float none
					.share-button
						padding-bottom 10px
					h1
						color #d87c72
						font-size 26px
						font-weight fw_medium
						margin 0 0 5px 0
						padding 0
						@media mw550
							font-size 22px
					h2
						color #d87c72
						font-size 16px
						font-weight fw_medium
						min-height 25px
						margin 5px 0 15px 0
						i
							margin-right 5px
					p
						color #DDDDDD
						font-size 14px
						line-height 1.4
						margin 0 0 10px 0
						&.tag
							color #d87c72
							margin-top 20px
							padding 0
							margin-bottom 0px
							a
								color #3ea4ff
								text-decoration none
								&:hover
									color #fd9e00
									text-decoration underline

