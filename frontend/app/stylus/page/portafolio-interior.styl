#main
	padding 0 15px
	.main-inner
		margin 0 auto
		max-width 1000px
		padding 35px 0 0 0
		#portafolio
			overflow hidden
			.wrapper-slide
				width 49%
				margin-right 3%
				float left
				@media mw790
					width 100%
					float none
        .slick-slide img
          width 100%
				.slide
					width 100%
					position relative
          .slide-list
            padding 0
            .slick-slide img
              width 100%
				
			.descripcion
				width 48%
				float left
				@media mw790
					width 100%
					float none
				h1
					color #FD9E00
					font 24px bitterregular
					margin 0 0 15px 0
					padding 0
				p
					color #DDDDDD
					text-align justify
					font 17px titillium_webregular
					line-height 21px
					margin 0 0 10px 0
					&.compatibilidad
						margin-top 20px
						margin-bottom 0px
					&.tecnologia
						margin-top 20px
						margin-bottom 0px
