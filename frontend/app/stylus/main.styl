mw905 = "only screen and (max-width: 905px)"
mw790 = "only screen and (max-width: 790px)"
mw610 = "only screen and (max-width: 610px)"
mw550 = "only screen and (max-width: 550px)"
mw450 = "only screen and (max-width: 450px)"
colorTexto = #DDDDDD

@import "./vendor/devicons"
@import "./vendor/icomoon"
@import "publicidad"

img
	display block
	border none
*
	outline none

body
	background #202020
.fullscreen-viewport
	height 100%
	overflow hidden
	position absolute
	width 100%
	@media mw790
		display none
	.fullscreen
		background transparent url(../img/bg-world.jpg) 0 0 no-repeat
		height 110%
		width 110%
		background-size 100%
		position fixed
#outer-wrapper
	position relative
	z-index 2
	height 100%
	width 100%
#header
	background transparent url(../img/bg-header.jpg) 0 0 repeat
	border-bottom 5px solid #3EA4FF
	min-height 85px
	padding 0 15px
	overflow hidden
	@media mw610
		padding 0
	.header-inner
		margin 0 auto
		max-width 1000px
		#logo
			padding-top 12px
			float left
			width 208px
			@media mw905
				float none
				margin 0 auto
		#btn-menu
			background #3ea4ff
			cursor pointer
			display none
			margin-top 15px
			height 40px
			text-align center
			&:before
				font 28px icomoon
				content: "\e600";
				line-height 40px
			@media mw610
				display block
		#nav
			float right
			height 85px
			position relative
			@media mw905
				margin-top 15px
				width 100%
			@media mw610
				height 160px
				margin 0
				overflow hidden
			.arrow
				top 69px
				position absolute
				left 0
				width 25px
				color #3EA4FF
				font-size 25px
				@media mw610
					display none
			ul
				list-style none
				height 100%
				padding 0
				margin 0
				overflow hidden
				li
					display table
					float left
					height 100%
					width 160px
					@media mw905
						width 25%
					@media mw610
						float none
						height 40px
						width 100%
					&.active
						background #BFEFFF
						a
							color #0085B2
							&:hover
								background #BFEFFF
					a
						color #595959
						display table-cell
						font 20px bitterregular
						height 100%
						text-align center
						text-decoration none
						text-transform uppercase
						vertical-align middle
						width 100%
						&:hover
							color #0085B2
							background #D7F5FF
#footer
	background transparent url(../img/bg-footer.jpg) 0 0 repeat
	margin-top 50px
	border-top 3px solid #535353
	.footer-inner
		margin 0 auto
		overflow hidden
		max-width 1000px
		padding 0 15px
		h2
			color #fff
			font 19px bitterregular
			margin 30px 0 15px 0
		.acerca-demi
			float left
			min-height 265px
			margin-right 30px
			width 435px
			@media mw790
				min-height 0
				padding-bottom 20px
				width 100%
			p
				color #DDDDDD
				font 16px titillium_webregular
				line-height 19px
				text-align justify
		.enlaces
			float left
			min-height 265px
			margin-right 25px
			width 250px
			@media mw790
				min-height 0
				padding-bottom 20px
			ul
				list-style none
				padding 0
				margin 0
				li
					color #DDDDDD
					font 16px titillium_webregular
					height 23px
					line-height 23px
					margin-bottom 5px
					span.icon
						margin-right 5px
					a
						color #3EA4FF
						font-family titillium_websemibold
						text-decoration none
						&:hover
							color #FD9E00

		.tweets
			float left
			min-height 120px
			padding-bottom 20px
			width 260px
			#twitter-animation
				margin-top 5px
				float left
				background transparent url(../img/twitter-flying.png) 0 0 no-repeat
				height 38px
				width 55px
			#cnt-tweet
				float right
				width 200px
	.copyright
		background #373737
		padding 0 15px
		.copyright-inner
			margin 0 auto
			max-width 1000px
			min-height 45px
			overflow hidden
			p
				color #A5A4A4
				font 15px titillium_webregular
				margin 0
				height 45px
				line-height 45px
				padding 0
				&.detalle
					float left
					margin-right 30px
				&.celular
					float right
					@media mw610
						float left
						margin-right 30px
					.icon
						display block
						float left
						padding-top 13px
						margin-right 3px
						font-size 19px
				&.email
					float right
					margin-right 30px
					@media mw610
						float left
					.icon
						display block
						float left
						padding-top 13px
						margin-right 3px
						font-size 20px
					a
						color #A5A4A4
						text-decoration none
